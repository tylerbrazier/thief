<%- include('head') %>

<div class="home-container">
  <h1>Download videos/audio from Youtube</h1>
  <form action="/search">
    <div>
      <input type="search" id="q" name="q" placeholder="Search" autofocus required>
    </div>
    <div>
      <input type="checkbox" id="videos" name="videos" checked>
      <label for="videos">Videos</label>
    </div>
    <div>
      <input type="checkbox" id="playlists" name="playlists" checked>
      <label for="playlists">Playlists</label>
    </div>
    <div>
      <button type="submit">Search</button>
      Or <a href="/ready">download by URL</a>
    </div>
  </form>

  <form action="/update" method="post">
    <div>
      <button type="submit">Update youtube-dl</button>
    </div>
  </form>

  <div>
    <a href="<%= destRoute %>"><%= destRoute %></a>
  </div>
</div>
