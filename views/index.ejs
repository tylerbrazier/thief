<!DOCTYPE html>
<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/assets/styles.css">

<title>Thief</title>

<h1>Download video/audio from Youtube</h1>

<form action="/search" method="post" class="margined">
  <div>
    <input type="search" id="search" name="search" placeholder="Search" autofocus required>
  </div>
  <div>
    <input type="checkbox" id="videos" name="videos" checked>
    <label for="videos">Videos</label>
  </div>
  <div>
    <input type="checkbox" id="playlists" name="playlists" checked>
    <label for="playlists">Playlists</label>
  </div>
  <div>
    <button type="submit">Search</button>
    Or <a href="/ready">download by URL</a>
  </div>
</form>

<form action="/update" method="post" class="margined">
  <div>
    <button type="submit">Update youtube-dl</button>
  </div>
</form>

<div>
  <p><a href="<%= destRoute %>"><%= destRoute %></a></p>
</div>
